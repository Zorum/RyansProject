= form_for @entry do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category
    = collection_select(:entry, :category_id, @categories, :id, :name, {:prompt => false})
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :entry
    = f.text_area :entry
  .field
    = f.label :options
    = collection_check_boxes(:option, :option_id, Option.all, :id, :name)
  .actions
    = f.submit 'Save'
