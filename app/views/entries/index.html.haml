.page-header
  %h1 Listing Entries
= link_to "Post a New Entry", new_entry_path, class: "btn btn-success"
- @entries.each do |entry|
  .entry
    %strong= entry.title
    %p= entry.entry
    .meta
      = link_to time_ago_in_words(entry.created_at) + " ago", entry
      %span.admin
        | #{link_to "Edit", edit_entry_path(entry)} |
        \#{link_to "Delete", entry, method: :delete, data: {confirm: "Are you sure you want to delete this entry?"}}
